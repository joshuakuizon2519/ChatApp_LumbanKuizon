<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatApp_LumbanKuizon.Pages.ProfilePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Profile Page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Image Source="logo_text.png" WidthRequest="125" Margin="0, 20,0, 30"/>
            <Label Text="Insert Name Here" TextColor="black"/>
            <Label Text="Email" TextColor="black"/>
            <Button Text="Sign Out" BackgroundColor="#3ea8a1" HeightRequest="50"  CornerRadius="25" FontAttributes="Bold"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>