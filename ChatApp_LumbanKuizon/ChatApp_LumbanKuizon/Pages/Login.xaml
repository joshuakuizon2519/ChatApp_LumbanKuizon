<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatApp_LumbanKuizon.Login">

    <StackLayout Margin="0" BackgroundColor="#ECECE4" Padding="15, 10">
        <Grid>
            <StackLayout>
                <Image Source="logo_text.png" WidthRequest="125" Margin="0, 20,0, 30"/>
                <Label Text="Hi There!" FontSize="Title" TextColor="#203c50" Margin="0, 10, 0, 0" FontAttributes="Bold"></Label>
                <Label Text="Welcome back! Please enter your details." TextColor="#999"  Margin="0,-7,0,20"/>
            </StackLayout>

            <StackLayout Margin="0,270,0,0">
                <Label Text="Email" TextColor="black" FontAttributes="bold" />
                <Entry x:Name="Email" Placeholder="Email" PlaceholderColor="#ccc" Keyboard="Email" TextColor="black" WidthRequest="30"/>
                <Label Text="Password" TextColor="Black" FontAttributes="bold"/>
                <Entry x:Name="Password" Placeholder="Password" PlaceholderColor="#ccc" IsPassword="True" TextColor="black" />
                <StackLayout Orientation= "Vertical" >
                    <Label Text="Forgot Password" TextColor="#3ea8a1" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" Margin="0,5,0,0" Padding="0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="OnTapGestureRecognizerTapped"
                                NumberOfTapsRequired="1" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Button Text="Sign In" BackgroundColor="#3ea8a1" TextColor="White" Padding="0" HeightRequest="50" MinimumWidthRequest="10" CornerRadius="25" FontAttributes="Bold" Clicked="ToMain"/>
                    <Button Text="Create an Account" BorderWidth="1" Padding="0" BorderColor="#3ea8a1" BackgroundColor="#ECECE4" TextColor="#3ea8a1" HeightRequest="50"  
                            CornerRadius="25" FontAttributes="Bold" Clicked="ToSignUp" />
                </StackLayout>


                <StackLayout Orientation="Horizontal" Padding="0,10,0,0">
                    <ImageButton Source="FacebookSignIn.png" HorizontalOptions="CenterAndExpand"  />
                    <ImageButton Source="GoogleSignIn.png" HorizontalOptions="CenterAndExpand"  />
                </StackLayout>
            </StackLayout>
        </Grid>
        
    </StackLayout>
