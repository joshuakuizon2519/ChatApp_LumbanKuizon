<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatApp_LumbanKuizon.Pages.ForgotPassw"
             Title="ChatApp Reset Password">
    
    <ContentPage.Content>
        <StackLayout Margin="0" BackgroundColor="#ECECE4" Padding="15, 200, 10,0" Orientation="Vertical">
            <Label Text="Email" TextColor="black" FontAttributes="bold" />
            <Entry x:Name="Email" Placeholder="Email" PlaceholderColor="#ccc" Keyboard="Email" TextColor="black" WidthRequest="30"/>
            <Button Text="Send Reset Password Email" BackgroundColor="#3ea8a1" TextColor="White" Padding="0" HeightRequest="50" MinimumWidthRequest="10" CornerRadius="25" FontAttributes="Bold"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>